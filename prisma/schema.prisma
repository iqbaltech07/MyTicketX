generator client {
  provider = "prisma-client-js"
  output   = "../src/app/generated/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  fullname  String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
